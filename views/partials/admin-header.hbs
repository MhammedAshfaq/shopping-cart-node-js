<header>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin">All Prodects</a>
                    </li>
                    {{#if user}}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/all-orders">All Orders <span
                                style="color: rgb(255, 255, 255) ;background-color: green ; border-radius: 10px;"
                                class="badge badge-pill " id="cart-count">{{allOrders}}</span> </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/all-users">All Users <span
                                style="color: rgb(255, 255, 255) ;background-color: green ; border-radius: 10px;"
                                class="badge badge-pill " id="cart-count">{{count}}</span> </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active btn btn-secondary" aria-current="page" href="/">User Page </a>
                    </li>
                    {{/if}}

                </ul>
                {{#if user}}
                <a style="margin-right: 20px;" class="btn btn-outline-secondary">{{user.Username}}</a>
                <div class="dropdown show">
                    <a class="btn btn-success" href="/admin/admin-logout">Logout</a>
                </div>
                {{else}}
                <div class="dropdown show">
                    <a class="btn btn-success" href="/admin/admin-login">Login</a>
                </div>
                {{/if}}

            </div>
        </div>
    </nav>
</header>