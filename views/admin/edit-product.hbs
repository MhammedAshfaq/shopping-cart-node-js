<section>
    <div class="container mt-4 ">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" value="{{product.Name}}" name="Name" class="form-control" placeholder="name">

                    <label class="mt-3" for="">Category</label>
                    <input type="text" value="{{product.Category}}" name="Category" class="form-control"
                        placeholder="category">

                    <label class="mt-3" for="">Discription</label>
                    <input type="text" value="{{product.Discription}}" name="Discription" class="form-control"
                        placeholder="discription">

                    <label class="mt-3" for="">Price</label>
                    <input type="number" value="{{product.Price}}" name="Price" class="form-control"
                        placeholder="price">

                    <label class="mt-3" for="">Image</label>
                    <img src="/product-images/{{product._id}}.jpg" style="max-height: 100px; margin: 10px;" alt=""
                        id="imgView">
                    <input type="file" name="Image" class="form-control" onchange="changeImage(event)">

                    <a href="/admin" style="margin-top: 23px; margin-left: 300px;" class="btn btn-danger"> Go To
                        Back</a>
                    <button type="submit" class="btn btn-success mt-4" style="">Update Product</button>

                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function changeImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }

